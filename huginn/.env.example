# Huginn Environment Configuration for ANIDHI Platform
# Copy this to .env and fill in your values

# Rails Configuration
RAILS_ENV=production
PORT=10000
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Database Configuration
HUGINN_DATABASE_ADAPTER=postgresql
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Huginn Domain Configuration
HUGINN_DOMAIN=your-huginn-domain.onrender.com
HUGINN_USE_GRAPHICAL_DIAGRAM=true
HUGINN_ENABLE_INSECURE_AGENTS=false

# Security Configuration
SECRET_KEY_BASE=generate-a-secure-secret-key-base-here
HUGINN_INVITATION_CODE=your-secure-invitation-code

# Email Configuration (Optional)
SMTP_DOMAIN=your-huginn-domain.onrender.com
SMTP_USER_NAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_SERVER=your-smtp-server
SMTP_PORT=587
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# MCP Integration
MCP_WEB_SEARCH_URL=https://anidhi-mcp-web-search.onrender.com
MCP_API_KEY=your-mcp-api-key-here

# Optional: Additional Huginn Configuration
# HUGINN_TIMEZONE=UTC
# HUGINN_DEFAULT_HTTP_USER_AGENT=Huginn - https://github.com/huginn/huginn
# HUGINN_ALLOW_JSONPATH_EVAL=false
# HUGINN_ENABLE_SECOND_PRECISION_SCHEDULE=false